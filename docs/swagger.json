{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/api/lists/{slug}": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "public"
                ],
                "summary": "Get list by slug",
                "parameters": [
                    {
                        "type": "string",
                        "example": "binance_seg1",
                        "description": "list slug",
                        "name": "slug",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "1 → text/plain",
                        "name": "as_text",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/app.ListGetJSON"
                        }
                    }
                }
            }
        },
        "/api/segments/{source}/{seg}": {
            "get": {
                "tags": [
                    "public"
                ],
                "summary": "Segment view (redirects to /api/lists/{source}_seg{n})",
                "parameters": [
                    {
                        "type": "string",
                        "description": "binance|bybit|okx",
                        "name": "source",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "1|2|3|4",
                        "name": "seg",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "1 → text/plain",
                        "name": "as_text",
                        "in": "query"
                    }
                ],
                "responses": {
                    "307": {
                        "description": "Temporary Redirect",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/health": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "public"
                ],
                "summary": "Service readiness",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/app.HealthResp"
                        }
                    }
                }
            }
        },
        "/update": {
            "post": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "admin"
                ],
                "summary": "Sync markets and rebuild lists",
                "parameters": [
                    {
                        "type": "string",
                        "description": "segments|targets|all",
                        "name": "mode",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "binance,bybit,okx",
                        "name": "source",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "upbit|coinbase|bithumb",
                        "name": "target",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/app.UpdateResp"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "app.HealthResp": {
            "type": "object",
            "properties": {
                "buildTime": {
                    "type": "string"
                },
                "checks": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "commit": {
                    "type": "string"
                },
                "now": {
                    "type": "string"
                },
                "status": {
                    "type": "string"
                },
                "uptime": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            }
        },
        "app.ListGetJSON": {
            "type": "object",
            "properties": {
                "items": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "slug": {
                    "type": "string"
                }
            }
        },
        "app.UpdateResp": {
            "type": "object",
            "properties": {
                "lists_updated": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "integer"
                    }
                },
                "markets_sync": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "array",
                        "items": {
                            "type": "integer"
                        }
                    }
                },
                "segments_updated": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "integer"
                    }
                }
            }
        }
    }
}